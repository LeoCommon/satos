config BR2_PACKAGE_PYTHON_SCIPY
	bool "python-scipy"
	depends on BR2_PACKAGE_OPENBLAS_ARCH_SUPPORTS # for openblas
	depends on BR2_PACKAGE_PYTHON_NUMPY_ARCH_SUPPORTS # for python-numpy
	depends on BR2_TOOLCHAIN_HAS_FORTRAN # lapack
	depends on BR2_PACKAGE_LAPACK_ARCH_SUPPORTS # lapack
	depends on BR2_TOOLCHAIN_USES_GLIBC || BR2_TOOLCHAIN_USES_MUSL # for python-numpy
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_OPENBLAS # build
	select BR2_PACKAGE_LAPACK # build
	select BR2_PACKAGE_PYTHON_NUMPY # runtime
	select BR2_PACKAGE_PYTHON_PYBIND

	help
	  SciPy (pronounced "Sigh Pie") is an open-source software for mathematics, science, and engineering.
	  It includes modules for statistics, optimization, integration, linear algebra, 
	  Fourier transforms, signal and image processing, ODE solvers, and more.

	  https://www.scipy.org/


comment "python-scipy needs python-numpy"
	depends on !BR2_PACKAGE_PYTHON_NUMPY_ARCH_SUPPORTS

comment "python-scipy needs fortran"
	depends on !BR2_TOOLCHAIN_HAS_FORTRAN

comment "python-scipy needs openblas"
	depends on !BR2_PACKAGE_OPENBLAS_ARCH_SUPPORTS

