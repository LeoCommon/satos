config BR2_PACKAGE_SOAPYSDR_PLUTO
	bool "soapysdr-pluto"
	depends on !BR2_STATIC_LIBS
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_PACKAGE_SOAPYSDR
	select BR2_PACKAGE_LIBIIO
	select BR2_PACKAGE_LIBAD9361
	help
	  Soapy SDR plugins for RTLSDR supported SDR devices

	  https://github.com/pothosware/SoapyRTLSDR

comment "soapysdr-rtlsdr needs a toolchain w/ threads, dynamic library, gcc >= 4.9"
	depends on BR2_STATIC_LIBS || !BR2_TOOLCHAIN_HAS_THREADS || \
		!BR2_TOOLCHAIN_GCC_AT_LEAST_4_9
